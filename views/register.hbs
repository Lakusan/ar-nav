<ons-page>
    <form method="POST" action="register">
        <div style="text-align: center; margin-top: 30px;">
            <p>
                <ons-input id="username" modifier="underbar" placeholder="Username" name="name" required float></ons-input>
            </p>
              <p>
                <ons-input id="E-Mail" modifier="underbar" placeholder="E-Mail" name="email" requiered float></ons-input>
            </p>
            <p>
                <ons-input id="password" modifier="underbar" type="password" placeholder="Password" name="password" float></ons-input>
            </p>
            <p style="margin-top: 30px;">
                <button class="btn" type="submit">Register</button>
            </p>
        </div>
    </form>
</ons-page>